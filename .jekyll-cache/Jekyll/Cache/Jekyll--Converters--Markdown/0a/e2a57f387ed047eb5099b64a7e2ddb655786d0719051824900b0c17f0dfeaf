		<span class="nx">require</span><span class="p">(</span><span class="nx">msg</span><span class="p">.</span><span class="nx">sender</span> <span class="o">==</span> <span class="nx">_owner</span><span class="p">,</span> <span class="dl">"</span><span class="s2">OwnerHelper: caller is not owner</span><span class="dl">"</span><span class="p">);</span>
